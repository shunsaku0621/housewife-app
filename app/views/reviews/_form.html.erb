<p class="">レビューを書く</p>
<div class="rating-box">
  <%= form_with model: review, url: cook_reviews_path(cook), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="rating-value-display">
        <span id="rating-value-display">0</span>
        /5
      </div>
    </div>
    <%= f.hidden_field :cook_id, value: cook.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :content, class: "textare" %>
    <%= f.submit "保存", class: "button" %>
  <% end %>
</div>