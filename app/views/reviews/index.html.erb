<%= render "shared/header" %>

<section class="section">
  <div class="review-container">
    <div class="columns">

      <div class="column">
        <div class="review-card">

          <header class="card-header">
            <p class="review-card-header-title">
              <%= @cook.name %>
            </p>
          </header>

          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="review-star-rating-front" style="width: %">★★★★★</div>
                <div class="review-star-rating-back">★★★★★</div>
              </div>
              <div class="review-average-score">
                点（<%= @cook.reviews.count %>件のレビュー）
              </div>
            </div>
          </div>

        </div>


        <table class="review-table">
          <thead>
            <tr>
              <th>ユーザー</th><th>点数</th><th>内容</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.user.nickname %></td>
                <td><%= review.score %></td>
                <td><%= review.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


      </div>
    </div>
  </div>
</section>