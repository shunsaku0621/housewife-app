<div class='form-header'>
  <h1 class="form-header-text">収入登録</h1>
</div>

<%= form_with(model: @getmoney, local: true) do |form| %>

  <div class="form-group-time">
    <span class="time">日付</span><%= form.datetime_select :start_time %>
  </div>


  <div class="form-group">
    <div class="form-tag">金額</div>
    <%= form.text_field :amount %>
  </div>

  
  <div class="form-group">
    <div class="form-tag">メモ</div>
    <%= form.text_area :memo %>
  </div>

  <div class="form-group">
    <div class="form-tag">カテゴリー</div>
    <%= form.collection_select(:category2_id, Category2.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  

 <div class="cook-send">
    <%= form.submit "Send", class:"register-red-btn" %>
 </div>
<% end %>

<div class="delete-income">
  <%= link_to 'この収支を削除',getmoney_path(@getmoney.id), method: :delete, data: { confirm: '削除しますか？' }, class:"delete-link" %>
</div>